<% conversations.each do |conversation| %>
  <% messages = conversation.messages %>
  <%= render(partial: 'chat/content/conversations/conversation',
             locals: { conversation: conversation }) if messages.present? %>
  <% messages.each do |message| %>
    <%= render partial: 'chat/content/conversations/message',
               locals: {
                 conversation: conversation,
                 message: message,
                 is_sender: current_user.id == message.user.id
               } %>
  <% end %>
<% end %>
